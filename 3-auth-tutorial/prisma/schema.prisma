generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int            @id @default(autoincrement())
  email     String         @unique
  password  String
  name      String
  createdAt DateTime       @default(now())
  token     RefreshToken[]
}

model RefreshToken {
  id        Int      @id @default(autoincrement())
  hashToken String
  userId    Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  rotatedAt DateTime?

  @@index([userId])
}
